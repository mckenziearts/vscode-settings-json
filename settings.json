{
  "editor.minimap.enabled": false,
  "editor.accessibilitySupport": "off",
  "editor.cursorBlinking": "smooth",
  "editor.renderWhitespace": "trailing",
  "editor.linkedEditing": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.fontWeight": "normal",
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 3,
  "editor.suggest.insertMode": "replace",
  "editor.lineNumbers": "off",
  "editor.formatOnPaste": true,
  "editor.stickyScroll.scrollWithEditor": false,
  "editor.stickyScroll.enabled": false,
  "editor.fontFamily": "Fira Code, Geist Mono, 'Courier New', monospace",
  "editor.formatOnSave": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.multiCursorModifier": "ctrlCmd",

  "emmet.triggerExpansionOnTab": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.autoReveal": false,
  "breadcrumbs.enabled": false,

  /**
  * Code
  **/
  // Include "-" in word selection.
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "emmet.includeLanguages": {
    "blade": "html",
    "vue-html": "html",
    "vue": "html",
    "react": "html",
    "javascript": "html"
  },

  // PHP
  "php.suggest.basic": false,

  // Prettier
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[tailwindcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
  },
  "[html]": {
    "editor.defaultFormatter": "onecentlin.laravel-blade",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "prettier.useEditorConfig": true,
  "prettier.tabWidth": 4,

  "javascript.preferences.quoteStyle": "single",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.quoteStyle": "single",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "laravel-pint.enable": true,

  "search.useIgnoreFiles": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/_ide_helper.php": true,
    "**/composer.lock": true,
    "**/package-lock.json": true,
    ".phpunit.result.cache": true
  },

  "window.customTitleBarVisibility": "auto",
  "window.commandCenter": false,
  "workbench.colorTheme": "Tokyo Night Storm",
  "workbench.iconTheme": "eq-material-theme-icons",
  "workbench.sideBar.location": "right",
  "workbench.tree.indent": 10,
  "workbench.editor.showTabs": "none",
  "workbench.statusBar.visible": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editorAssociations": {
    "*.html": "default"
  },
  "workbench.activityBar.location": "hidden",
  "workbench.layoutControl.enabled": false,
  "workbench.settings.applyToAllProfiles": [
    "editor.lineNumbers"
  ],
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,

  "vscode_custom_css.imports": [
    "file:///Users/arthurmonney/Herd/OSS/mckenziearts/vscode-settings-json/custom-vscode.css",
    "file:///Users/arthurmonney/Herd/OSS/mckenziearts/vscode-settings-json/vscode-script.js"
  ],
  "window.newWindowProfile": "Default"
}
